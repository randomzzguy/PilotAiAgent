# LinkedIn Automation System - Environment Configuration
# Copy this file to .env and fill in your actual values

# =============================================================================
# APPLICATION SETTINGS
# =============================================================================
NODE_ENV=development
PORT=3000
TIMEZONE=Asia/Dubai
LOG_LEVEL=info
FRONTEND_URL=http://localhost:3001

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
# PostgreSQL Database
DATABASE_URL=postgresql://postgres:linkedin123@localhost:5432/linkedin_automation
POSTGRES_DB=linkedin_automation
POSTGRES_USER=postgres
POSTGRES_PASSWORD=linkedin123
POSTGRES_PORT=5432

# Legacy Database Config (for backward compatibility)
DB_HOST=localhost
DB_PORT=5432
DB_NAME=linkedin_automation
DB_USER=postgres
DB_PASSWORD=linkedin123
DB_SSL=false

# Redis Cache
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=redis123
REDIS_PORT=6379

# =============================================================================
# LINKEDIN API CONFIGURATION
# =============================================================================
# Get these from LinkedIn Developer Portal: https://www.linkedin.com/developers/
LINKEDIN_CLIENT_ID=your_linkedin_client_id_here
LINKEDIN_CLIENT_SECRET=your_linkedin_client_secret_here
LINKEDIN_REDIRECT_URI=http://localhost:3000/api/linkedin/callback
LINKEDIN_SCOPE=r_liteprofile,r_emailaddress,w_member_social
LINKEDIN_API_VERSION=v2

# =============================================================================
# AI API CONFIGURATION
# =============================================================================
# Choose between OpenAI (paid) or OpenRouter (free/paid options)
USE_OPENROUTER=false

# OpenAI Configuration (if USE_OPENROUTER=false)
# Get your API key from: https://platform.openai.com/api-keys
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4
OPENAI_MAX_TOKENS=2000
OPENAI_TEMPERATURE=0.7

# OpenRouter Configuration (if USE_OPENROUTER=true)
# Get your API key from: https://openrouter.ai/keys
# Free models available: meta-llama/llama-3.1-8b-instruct:free, microsoft/phi-3-mini-128k-instruct:free
OPENROUTER_API_KEY=your_openrouter_api_key_here
OPENROUTER_MODEL=meta-llama/llama-3.1-8b-instruct:free

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================
# JWT Secret (generate a strong random string)
JWT_SECRET=your_super_secret_jwt_key_here_make_it_long_and_random
JWT_EXPIRES_IN=7d

# Encryption Key (32 characters for AES-256)
ENCRYPTION_KEY=your_32_character_encryption_key_here

# Session Secret
SESSION_SECRET=your_session_secret_here

# =============================================================================
# RATE LIMITING
# =============================================================================
MAX_REQUESTS_PER_MINUTE=100
RATE_LIMIT_WINDOW_MS=60000
AUTH_RATE_LIMIT=5
AUTH_RATE_LIMIT_WINDOW=900000

# Legacy Rate Limiting (for backward compatibility)
RATE_LIMIT_MAX_REQUESTS=100

# =============================================================================
# CONTENT GENERATION SETTINGS
# =============================================================================
DEFAULT_CONTENT_LENGTH=medium
MAX_CONTENT_VARIATIONS=5
CONTENT_GENERATION_TIMEOUT=30000
MAX_POSTS_PER_DAY=5
MIN_HOURS_BETWEEN_POSTS=4
CONTENT_APPROVAL_REQUIRED=false

# =============================================================================
# SCHEDULING SETTINGS
# =============================================================================
# Optimal posting times for Abu Dhabi (24-hour format)
OPTIMAL_POSTING_TIMES=08:00,12:00,17:00,20:00
PRIMARY_POSTING_TIME=08:30
SECONDARY_POSTING_TIME=13:00
EVENING_POSTING_TIME=20:30
SCHEDULING_BUFFER_MINUTES=15

# =============================================================================
# FILE UPLOAD SETTINGS
# =============================================================================
UPLOAD_MAX_SIZE=10485760
UPLOAD_ALLOWED_TYPES=image/jpeg,image/png,image/gif,image/webp
UPLOAD_PATH=./uploads
MAX_FILE_SIZE=10485760

# =============================================================================
# ANALYTICS SETTINGS
# =============================================================================
ANALYTICS_REFRESH_INTERVAL=30
ANALYTICS_RETENTION_DAYS=90
METRICS_UPDATE_FREQUENCY=6

# =============================================================================
# EMAIL CONFIGURATION (Optional)
# =============================================================================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_app_password
FROM_EMAIL=noreply@yourcompany.com
FROM_NAME=LinkedIn Automation System

# =============================================================================
# MONITORING & LOGGING
# =============================================================================
ENABLE_PROMETHEUS_METRICS=true
PROMETHEUS_PORT=9090
GRAFANA_PORT=3001
GRAFANA_PASSWORD=admin123
LOG_LEVEL=info
LOG_FILE=./logs/app.log

# Health Check Settings
HEALTH_CHECK_INTERVAL=30000
HEALTH_CHECK_TIMEOUT=5000
HEALTH_CHECK_ENDPOINT=/health

# =============================================================================
# NGINX CONFIGURATION (Production)
# =============================================================================
NGINX_PORT=80
NGINX_SSL_PORT=443
SSL_CERT_PATH=./nginx/ssl/cert.pem
SSL_KEY_PATH=./nginx/ssl/key.pem

# =============================================================================
# BACKUP CONFIGURATION
# =============================================================================
BACKUP_RETENTION_DAYS=7
BACKUP_SCHEDULE=0 2 * * *
BACKUP_PATH=./backups

# =============================================================================
# DEVELOPMENT SETTINGS
# =============================================================================
# Only used in development mode
DEV_AUTO_RELOAD=true
DEV_MOCK_LINKEDIN_API=false
DEV_MOCK_OPENAI_API=false
DEV_SEED_DATABASE=false

# =============================================================================
# FEATURE FLAGS
# =============================================================================
ENABLE_ANALYTICS_WORKER=true
ENABLE_SCHEDULER_WORKER=true
ENABLE_EMAIL_NOTIFICATIONS=false
ENABLE_WEBHOOK_NOTIFICATIONS=false
ENABLE_CONTENT_MODERATION=true

# =============================================================================
# ADVANCED SETTINGS
# =============================================================================
# Database Connection Pool
DB_POOL_MIN=2
DB_POOL_MAX=10
DB_POOL_IDLE_TIMEOUT=30000

# Redis Connection
REDIS_MAX_RETRIES=3
REDIS_RETRY_DELAY=1000

# API Timeouts
API_TIMEOUT=30000
LINKEDIN_API_TIMEOUT=15000
OPENAI_API_TIMEOUT=30000

# Content Limits
MAX_CONTENT_LENGTH=3000
MAX_HASHTAGS=30
MAX_MENTIONS=10

# =============================================================================
# WEBHOOK CONFIGURATION (Optional)
# =============================================================================
WEBHOOK_URL=https://your-webhook-endpoint.com/linkedin-automation
WEBHOOK_SECRET=your_webhook_secret_here

# =============================================================================
# THIRD-PARTY INTEGRATIONS (Optional)
# =============================================================================
# Slack Integration
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/SLACK/WEBHOOK
SLACK_CHANNEL=#linkedin-automation

# Discord Integration
DISCORD_WEBHOOK_URL=https://discord.com/api/webhooks/YOUR/DISCORD/WEBHOOK

# =============================================================================
# NOTES
# =============================================================================
# 1. Never commit the actual .env file to version control
# 2. Generate strong, unique secrets for production
# 3. Use environment-specific values for different deployments
# 4. Regularly rotate API keys and secrets
# 5. Monitor logs for any configuration issues