# LinkedIn Content Generator - Client Environment Configuration
# Copy this file to .env.local for local development
# For Vercel deployment, set these in the Vercel dashboard

# Password Protection
REACT_APP_ACCESS_PASSWORD=your_secure_password_here

# API Configuration (if using backend)
REACT_APP_API_URL=http://localhost:3000

# Application Settings
REACT_APP_APP_NAME=LinkedIn Content Generator
REACT_APP_COMPANY_NAME=Your Company Name

# Security Settings
REACT_APP_ENABLE_PASSWORD_PROTECTION=true

# Analytics (optional)
REACT_APP_GA_TRACKING_ID=

# Feature Flags
REACT_APP_ENABLE_ANALYTICS=false
REACT_APP_ENABLE_SCHEDULING=false

# Environment
REACT_APP_ENVIRONMENT=production

# Instructions:
# 1. Copy this file to .env.local for local development
# 2. Replace 'your_secure_password_here' with a strong password
# 3. For Vercel deployment, add these variables in the Vercel dashboard
# 4. Never commit .env.local to version control